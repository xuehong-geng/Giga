<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="Giga.Log" type="Giga.Log.Configuration.LogConfigurationSection, Giga.Log" requirePermission="false"/>
  </configSections>
  <Giga.Log>
    <Loggers>
      <Logger name="FileLog" type="Giga.Log.File.FileLogger, Giga.Log" enabled="true" synchronize="false">
        <Parameters>
          <Parameter name="RootPath" value="/Logs" />
          <Parameter name="FilePattern" value="{Source}_{Severity}_yyyyMMddhhmmss_{nnn}.log" />
          <Parameter name="MaxSize" value="1024000" />
        </Parameters>
      </Logger>
    </Loggers>
  </Giga.Log>
</configuration>